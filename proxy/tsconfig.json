{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "dist",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "strictNullChecks": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}